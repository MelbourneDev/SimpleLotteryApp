@* UserPage.cshtml in Views/User *@

<h2>User Page</h2>

<form asp-action="EnterLotto" method="post">
    <button type="submit">Enter Lotto</button>
</form>

<form asp-action="LeaveLotto" method="post">
    <button type="submit">Leave Lotto</button>
</form>

@if (ViewBag.CurrentLottoId != null)
{
    <p>You are currently entered in Lotto: @ViewBag.CurrentLottoId</p>
}
else
{
    <p>You are not entered in any Lotto.</p>
}
